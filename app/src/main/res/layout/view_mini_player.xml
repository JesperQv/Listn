<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/player_bg_end">


    <com.jesperqvarfordt.listn.common.view.playerprogressbar.PlayerProgressBar
        style="@style/CustomProgressBar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:progressDrawable="@drawable/progress_bar" />

    <ToggleButton
        android:id="@+id/playPause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:background="@drawable/play_pause_toggle"
        android:textOff=""
        android:textOn="" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/playPause"
        android:layout_toStartOf="@+id/time"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat_light"
        android:lines="1"
        android:textColor="@color/white" />

    <com.jesperqvarfordt.listn.common.view.remainingtimestamp.RemainingTimeStamp
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:textColor="@color/light_grey" />

</RelativeLayout>
